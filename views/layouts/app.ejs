<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.1/css/all.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.css"/>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    
    <%- body %> 


    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        // data table
        $(document).ready(function() {
            $('.soro-data-table').DataTable();
        });


        // preview images
        const studentImage = document.querySelector('#upload_student_photo');
        const studentImagePreview = document.querySelector('.preload-student')

        if(studentImage) {
            studentImage.onchange = (e) => {
                let imageLink = URL.createObjectURL(e.target.files[0]);
                studentImagePreview.setAttribute('src', imageLink)
            }
        }

        const detete_btn = document.querySelectorAll('.detete-btn');

        if(detete_btn){
            detete_btn.forEach(item => {
                item.onclick = (e) => {
                    const conf = confirm('Are you sure ?')
                    if(conf){
                        return true;
                    }else {
                        return false;
                    }
                }

            })
        }

    </script>
</body>
</html>