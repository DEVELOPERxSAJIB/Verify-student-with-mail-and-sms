

<div class="container mt-5 student-form">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <a href="/student" class="btn-sm btn btn-success shadow-sm ">Step Back</a>
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h2 class="text-center">Add new Student</h2>
                </div>
                <div class="card-body">
                    <form action="/student/create" method="POST" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input name="name" type="text" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input type="text" name="email" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input type="text" name="cell" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Location</label>
                            <select name="location" id="" class="form-control">
                                <option value="">-select-</option>
                                <option value="Dhaka">Dhaka</option>
                                <option value="Khulna">Khulna</option>
                                <option value="Slyhet">Slyhet</option>
                                <option value="Rajshahi">Rajshahi</option>
                                <option value="Rongpur">Rongpur</option>
                                <option value="Barisal">Barisal</option>
                            </select>
                        </div>
                        <div class="my-3">
                            <label for="">Photo</label> 
                            <br>
                            <img class="preload-student" src="" alt="">
                            <br>
                            <label for="upload_student_photo"><img src="https://static.thenounproject.com/png/212328-200.png" alt=""></label>
                            <input name="student-photo" type="file" id="upload_student_photo">
                        </div>
                        <div class="my-3">
                            <input type="submit" class="btn btn-success w-100" value="Create Now">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
